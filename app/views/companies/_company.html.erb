<div id="<%= dom_id company %>">
<br></br>
<div class = "newEntry" style = "text-align: left; width: 25%;">
  <p><b><center>SHOWING THIS COMPANY</center></b></p>
  <br></br>

  <p>
    <strong>Company name:</strong>
    <%= company.company_name %>
  </p>

  <p>
    <strong>Company location:</strong>
    <%= company.company_location %>
  </p>

  <p>
    <strong>Company industry:</strong>
    <%= company.company_industry %>
  </p>


  <br></br>
  <div style = "margin-left: auto; margin-right: auto; text-align: center;">
    <%= button_to "EDIT", edit_company_path(@company), method: :get, class: "show-btn", style: "margin-bottom: 10px; font-size: 12px;" %>
    <%= button_to "DELETE", @company, method: :delete, class: "show-btn", style: "font-size: 12px;" %>
  </div>
</div>

</div>
