<div id="calendar">
<%= month_calendar(exams: @exam_by_month) do |date, exams| %>
  <%= date.day %>
  <% @exam_by_month.each do |exam| %>
    <div>
      <% if date == exam.exam_date %>
        <%= exam.course.course_name %>
      <% end %>
    </div>
  <% end %>
<% end %>
</div>

