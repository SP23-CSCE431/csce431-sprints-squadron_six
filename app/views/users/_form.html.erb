<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
  <div class = "error">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class = "newEntry">
  <div>
    <%= form.label :first_name, style: "display: block" %>
