<div class="const">
  <h1>Courses</h1>
</div>



<%= render 'courses/search_form' %>
<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :course_name, "Name", default_order: :asc) %></th>
      <th><%= sort_link(@q, :course_hours, "Hours", default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.course_name %></td>
        <td><%= course.course_hours %></td>
        <td><%= button_to "SHOW", course, method: :get, class: "show-btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

